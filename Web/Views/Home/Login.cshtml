@model string

@{
    Layout = "_BaseLayout";
}


<div class="container">
    <div class="row">
        <div class="col-xxl-10 col-xl-10 col-lg-10 offset-xxl-1 offset-xl-1 offset-lg-1" id="register-card">
            <div class="row">
                <div class="col-xxl-8 col-xl-8 col-lg-7 p-5">
                    <h3><strong>Identificarme en PixelCity!</strong></h3>
                    <p class="text-secondary">Te damos de nuevo la bienvenida a la familia de PixelCity!</p>
                    <form>
                      <div class="form-group">
                        <label for="username">Usuario o Correo</label>
                        <input type="text" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Enter email">
                      </div>
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input type="password" class="form-control" id="password" placeholder="***********************">
                        </div>
                        <div class="d-grid">
                              <button type="submit" class="btn btn-success">Iniciar Sesion</button>
                        </div>
                    </form>
                </div>
                <div class="col-xxl-4 col-xl-4 col-lg-5">
                    <img src="/img/bgreg.png" alt="">
                    <p class="text-divider"><span>¿No tienes cuenta?</span></p>
                    <div class="d-grid">
                        <a class="btn btn-success" asp-controller="Home" asp-action="Register">Registrarme</a>
                    </div>
                    <p class="text-divider"><span>¿Tienes Problemas?</span></p>
                    <ul>
                        <li><a href="#">Olvidé mi contraseña</a></li>
                        <li><a href="#">Olvidé mi nombre de usuario</a></li>
                        <li><a href="#">No me llego el correo de confirmación</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>