@model string

@{
    Layout = "_BaseLayout";
}


<div class="container">
    <div class="row">
        <div class="col-xxl-10 offset-xxl-1 register-fix" id="register-card">
            <div class="row">
                <div class="col-xxl-8 p-5">
                    <h3><strong>Unete a PixelCity!</strong></h3>
                    <p class="text-secondary">Por favor, toma un momento para ser parte de la familia!</p>
                    <form>
                        <div class="form-group">
                            <label for="username">Usuario</label>
                            <input type="text" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <label for="email">Correo</label>
                            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input type="password" class="form-control" id="password" placeholder="***********************">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Registrarme!</button>
                        </div>
                    </form>
                </div>
                <div class="col-xxl-4">
                    <img src="/img/bgreg.png" alt="">
                    <p class="text-divider"><span>¿Ya tienes una cuenta?</span></p>
                    <div class="d-grid">
                        <a class="btn btn-success" asp-controller="Home" asp-action="Login">Identificarme</a>
                    </div>
                    <p class="text-divider"><span>Regístrate ahora para:</span></p>
                    <ul>
                        <li>Crear y compartir tu contenido favorito.</li>
                        <li>Hacer nuevos amigos.</li>
                        <li>Ser parte de la Inteligencia Colectiva!</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>