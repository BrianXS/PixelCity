<!DOCTYPE html>
<html>
<head>
    <title>PixelCity - @ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
</head>
<body>
<div id="upper-menu">
    <div class="container">
        <nav class="row">
            @if (Context.Request.Path.ToString().ToLower().Contains("login") ||
                 Context.Request.Path.ToString().ToLower().Contains("register"))
            {
                <div class="col-xxl-5 col-xl-7 col-lg-6 col-md-7 col-sm-6 col-6 offset-xxl-2 offset-xl-1 offset-lg-1">
                    <a asp-controller="Home" asp-action="Index">PixelCity</a>
                </div>
                <div class="col-xxl-1 col-xl-1 col-lg-1 col-md-2 col-sm-2 d-none">
                </div>
                <div class="col-xxl-2 col-xl-2 col-lg-3 col-md-3 col-sm-4 col-6 d-none">
                </div> 
            } else
            {
                <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-8 col-sm-12 offset-xxl-3 offset-xl-3 offset-lg-3 offset-md-2">
                    <a asp-controller="Home" asp-action="Index">PixelCity</a>
                </div>
                <div class="col-xxl-1 col-xl-1 col-lg-1 col-md-2 col-sm-2 d-none">
                </div>
                <div class="col-xxl-2 col-xl-2 col-lg-3 col-md-3 col-sm-4 col-6 d-none">
                </div> 
            }
        </nav>
    </div>
</div>
@if(!(Context.Request.Path.ToString().ToLower().Contains("login") 
      || Context.Request.Path.ToString().ToLower().Contains("register")
      || Context.Request.Path.ToString().ToLower().Contains("password-recovery")
      || Context.Request.Path.ToString().ToLower().Contains("request-confirmation-email") 
      || Context.Request.Path.ToString().ToLower().Contains("request-username-email")))
{
    <div id="lower-menu">
        <div class="container">
            <div class="row">
                <nav class="col-xxl-8 col-xl-10 col-lg-10 col-sm-12 offset-xxl-2 offset-xl-1 offset-lg-1 offset-sm-0">
                    <a class="active" href="#"><i class="bi bi-house-door-fill"></i></a>
                    <a href="#">Comunidades</a>
                    <a href="#">TOPs</a>
                    <a href="#">Administracion</a>
                </nav>
            </div>
        </div>
    </div>
    <div id="sub-menu">
        <div class="container">
            <div class="row">
                <div class="col-xxl-10 col-xl-10 col-lg-10 col-sm-12 col-12 custom-offset">
                    <nav>
                        <a class="active" href="#">Inicio</a>
                        <a href="#">Novatos</a>
                        <a href="#">Intermedios</a>
                        <a href="#">Veteranos</a>
                    </nav>
                </div>
            </div>
        </div>
    </div>
}
@RenderBody()
<br/>
<br/>
<script src="/js/bootstrap.bundle.js"></script>
<script src="/js/sitescripts.js"></script>
</body>
</html>

